<div class="container">
  <div class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Instruments", instruments_path %></li>
    <li class="breadcrumb-item"><%= link_to @instrument.category %></li>
  </div>

    <div class="row-container">
      <div class="pic-btn-container col-xs-12 col-md-8">
        <p> <%= cl_image_tag @instrument.photo, height: 300, width: 400, crop: :fill %> </p>
      </div>

      <div class="instrument-info col-xs-12 col-md-4">
        <div>
        <%= cl_image_tag @instrument.user.photo, id: "avatar" %>
        </div>
        <p> <strong>Name:</strong> <%= @instrument.user.name %> </p>
        <p> <strong>Address:</strong> <%= @instrument.user.address %> </p>
        <p> <strong>Email:</strong> <%= @instrument.user.email %> </p>

        <p class="separate"> <strong>Brand:</strong> <%= @instrument.brand %> </p>
        <p> <strong>Description:</strong> <%= @instrument.description %> </p>
        <p> <strong>Condition:</strong> <%= @instrument.condition %> </p>
        <p> <strong>Day Value:</strong> $ <%= @instrument.day_value %> </p>

        <% if @instrument.user == current_user %>
        <p> <%= link_to "Edit", edit_instrument_path(@instrument), class: 'btn btn-white' %>

        <%= link_to "Delete", instrument_path(@instrument), method: :delete, class: 'btn btn-white' %> </p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">
        <p class="btn btn-success btn-block btn-lg"> <%= link_to "Rent", new_instrument_rent_path(@instrument) %> </p>

      </div>
    </div>
</div>
