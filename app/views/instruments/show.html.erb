<div class="container">
  <div class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Instruments", instruments_path %></li>
    <li class="breadcrumb-item"><%= link_to @instrument.category %></li>
  </div>

  <div class="row">
    <div class="col-xs-6 col-md-6">
      <div class="image-container" style="background-image: url(<%= @instrument.photo.url %>)"></div>
      <p> <%= link_to "Rent", new_instrument_rent_path(@instrument), class: "btn btn-success btn-block btn-lg" %> </p>
    </div>

    <div class= "info col-xs-6 col-md-6">
      <div class= "infos col-xs-6 col-md-12">
        <dl>
          <dt>Brand</dt>
          <dd><%= @instrument.brand %></dd>
          <dt>Description</dt>
          <dd><%= @instrument.description %></dd>
          <dt>Condition</dt>
          <dd><%= @instrument.condition %></dd>
          <dt>Day Value</dt>
          <dd><%= @instrument.day_value %></dd>
        </dl>
      </div>
      <div class= "buttons col-xs-6">
        <% if @instrument.user == current_user %>
          <p> <%= link_to "Edit", edit_instrument_path(@instrument), class: 'btn btn-white' %>
            <%= link_to "Delete", instrument_path(@instrument), method: :delete, class: 'btn btn-white' %> </p>
        <% end %>
      </div>
    </div>

      <div class="row col-xs-12 profile">
        <div class="col-xs-6 profile-pic">
          <div id="image-align">
            <%= cl_image_tag @instrument.user.photo, id: "avatar" %>
          </div>
       </div>
       <div class="col-xs-6 profile-info">
        <dl>
          <dt>Name</dt>
          <dd><%= @instrument.user.name %></dd>
          <dt>Address</dt>
          <dd><%= @instrument.user.address %></dd>
          <dt>email</dt>
          <dd><%= @instrument.user.email %></dd>
        </dl>
      </div>
    </div>

    <% if @instrument.user != current_user %>
    <% end %>
  </div>
</div>

