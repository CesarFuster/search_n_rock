<div class="container">
  <div class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Instruments", instruments_path %></li>
    <li class="breadcrumb-item"><%= link_to @instrument.category %></li>
  </div>

  <div class="row first">
    <div class="col-xs-6 col-md-6">
      <div class="image-container" style="background-image: url(<%= @instrument.photo.url %>)"></div>

      <% if @instrument.user != current_user %>
      <p> <%= link_to "Rent", new_instrument_rent_path(@instrument), class: "btn btn-success btn-block btn-lg" %> </p>
      </div>
      <% end %>
    </div>

    <div class= "info col-xs-6 col-md-6">
      <!-- <hr class="transparent">-->
      <div class="details">
        <h1>Details</h1>
        <p>Brand: <%= @instrument.brand %></p>
        <p>Description: <%= @instrument.description %></p>
        <p>Condition: <%= @instrument.condition %></p>
        <p>Day value R$: <%= @instrument.day_value %></p>
      </div>

      <% if @instrument.user == current_user %>
      <div class="buttons-current-user">
        <p> <%= link_to "Edit", edit_instrument_path(@instrument), class: 'btn btn-white' %>

          <%= link_to "Delete", instrument_path(@instrument), method: :delete, class: 'btn btn-white' %> </p>
          <% end %>
        </div>
      </div>
    </div>

    <hr>

    <div class="itens-reviews col-xs-12 col-md-10">
      <div class="row">
       <div class="row-img">
        <div class="img-div col-xs-6 col-md-2">
          <img class="img-profile" <%= cl_image_tag @instrument.user.photo, width: 120, height: 120 %>
        </div>
        <div class="profile-description-col-xs-6 col-md-10">
          <h1><%= @instrument.user.name %> </h1>
          <p> <%= @instrument.user.email %> </p>
          <p> Your average rating: <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></p>
        </div>
      </div>
      <div class="row">
        <div class="title-your-reviews col-xs-12 col-md-12">
          <h1>Reviews</h1>
        </div>
        <div class="reviews-list col-xs-12 col-md-11">
          <ol>
            <% @reviews.each do |review| %>
            <li>
             <%= review.content %> | <strong> # Rating: <%= review.rating  %> </strong> | <strong>Author: <%= review.author  %> </strong>
           </li>
           <hr>
           <% end %>
         </ol>
       </div>

       <% if @instrument.user != current_user %>
       <p>Do Your Review</p>
       <div >
        <%= simple_form_for [@instrument, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.input :author, placeholder: "your name" %>
        <%= f.submit "Add a Review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>





