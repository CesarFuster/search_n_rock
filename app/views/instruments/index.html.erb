
<div class="container">

  <div class="title-page">
    <h1>Instruments</h1>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @instruments.each do |instrument| %>
        <div class="col-xs-12 col-sm-6">
          <a href=<%= instrument_path(instrument) %>>
            <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path instrument.photo %>')">
              <div class="card-description">
                <h2> <%= instrument.category %> </h2>
                <p> <%= instrument.user.name %> </p>
                <p> <%= instrument.user.email %> </p>
              </div>
              <img class="card-user" src=<%= cl_image_path instrument.user.photo %>>
            </div>
          </div>
        </a>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
  </div>
<% console %>
</div>




