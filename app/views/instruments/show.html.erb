<div class="container">

  <h1> <%= @instrument.category %> </h1>

  <div>
      <p> <%= @instrument.brand %> </p>
      <p> <%= @instrument.description %> </p>
      <p> <%= @instrument.condition %> </p>
      <p> <%= @instrument.day_value %> </p>
  </div>

  <p class="btn btn-success"> <%= link_to "Rent", new_instrument_rent_path(@instrument) %> </p>

  <p></p>

  <p class="btn btn-primary"> <%= link_to "back to all", instruments_path %> </p>

  <% if @instrument.user == current_user %>
    <p class="btn btn-warning"> <%= link_to "Edit", edit_instrument_path(@instrument) %> </p>

    <p class="btn btn-danger"> <%= link_to "Delete", instrument_path(@instrument), method: :delete %> </p>
  <% end  %>

</div>
