
<div class="container">

  <div class="title-page">
    <h1>Instruments</h1>
  </div>

  <div class="row">
    <div>
      <% @instruments.each do |instrument| %>
      <div class="cards-show col-xs-12 col-sm-4">
        <a href=<%= instrument_path(instrument) %>>
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path instrument.photo %>')">
            <div class="card-description">
              <h2> <%= instrument.category %> </h2>
              <p> <%= instrument.user.email %> </p>
            </div>
          </div>
        </div>
      </a>
      <% end %>
    </div>
  </div>

  <div class="button">
   <p class="btn btn-primary"> <%= link_to "Add Instrument", new_instrument_path %> </p>
  </div>
</div>




